<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mykotlinsample">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:anyDensity="true"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">

        <activity
            android:name=".Common.CommonActivities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Common.CommonActivities.RegisterActivity"
            android:theme="@style/Theme.AppCompat"/>

        <activity
            android:name=".Common.CommonActivities.ForgotActivity"
            android:theme="@style/Theme.AppCompat"/>

        <activity
            android:name=".Common.CommonActivities.LoginActivity"
            android:theme="@style/Theme.AppCompat"/>

        <activity
            android:name="com.example.mykotlinsample.Users.UserActivities.DashboardActivity"
            android:theme="@style/Theme.AppCompat"/>

        <!-- Admin Activities -->

        <activity
            android:name=".Admin.AdminActivities.`Admin_\Dashboard`"
            android:theme="@style/Theme.AppCompat"/>

        <activity
            android:name=".Admin.AdminActivities.Admin_Add_Category"
            android:theme="@style/Theme.AppCompat"/>

        <activity
            android:name=".Admin.AdminActivities.Admin_ItemsList"
            android:theme="@style/Theme.AppCompat"/>

        <activity
            android:name=".Admin.AdminActivities.Admin_Add_Items"
            android:theme="@style/Theme.AppCompat"/>

        <activity
            android:name=".Admin.AdminActivities.Admin_Updated_Item"
            android:theme="@style/Theme.AppCompat"/>

        <activity
            android:name=".Admin.AdminActivities.Admin_HiddenItems"
            android:theme="@style/Theme.AppCompat"/>

        <activity
            android:name=".Admin.AdminActivities.Admin_UpdatedCategory"
            android:theme="@style/Theme.AppCompat"/>

        <activity
            android:name=".Admin.AdminActivities.Admin_HiddenCategories"
            android:theme="@style/Theme.AppCompat"/>

    </application>

</manifest>